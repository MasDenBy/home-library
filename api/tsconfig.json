{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es6"
    ],
    "module": "esnext",
    "outDir": "./dist",
    "sourceMap": true,
    "types": [
      "reflect-metadata",
      "jasmine"
    ],
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "tests",
    "node_modules"
  ],
  "typeRoots": ["node_modules/@types"]
}